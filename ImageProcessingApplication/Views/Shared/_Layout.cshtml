<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand navbar-logo" href="@Url.Action("Home", "Index")">
            <div>
                <img src="@Url.Action("Image", "File", new { imageName = "logo.png" })" alt="Logo" height="30" class="d-inline-block align-top">Processor
            </div>
        </a>
        <div class="navbar-user collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" id="navbarDropdown">
                        <img src="@Url.Action("Image", "File", new { imageName = "user-icon.png" })" alt="User Icon" class="rounded-circle" height="30">

                        @if (User.Identity.IsAuthenticated
                            && !string.IsNullOrEmpty(User.Identity.Name)
                            && User.Identity.Name != Constants.AnonymousUserConstant)
                        {
                            <text>@User.Identity.Name</text>
                        }
                        else
                        {
                            <text>Anonymous</text>
                        }
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated
                    && !string.IsNullOrEmpty(User.Identity.Name)
                    && User.Identity.Name != Constants.AnonymousUserConstant)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/user/logout">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/userinfo">Profile</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/user/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

